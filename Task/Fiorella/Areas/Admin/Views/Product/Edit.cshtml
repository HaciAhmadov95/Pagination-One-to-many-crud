@model ProductEditVM
@{
    ViewData["Title"] = "Edit";
}


<div class="container mt-5">
 
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control text-white" maxlength="20">
            <span class="text-danger" asp-validation-for="Name"></span>

            <label>Category</label>
            <input asp-for="Category" class="form-control text-black" disabled maxlength="20">
            <span class="text-danger" asp-validation-for="Category"></span>

            <label>Description</label>
            <input asp-for="Description" class="form-control text-white mt-4" maxlength="20">
            <span class="text-danger" asp-validation-for="Description"></span>
            <label>Price</label>
            <input asp-for="Price" class="form-control text-white mt-4" maxlength="20">
            <span class="text-danger" asp-validation-for="Price"></span>

            <label class="mt-4">Category</label>
            <select class="form-control text-white" asp-for="CategoryId" asp-items="@ViewBag.categories">
            </select>


            <label class="mt-4">Images</label>
            <input asp-for="Photos" class="form-control">
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>


        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a asp-action="Index" class="btn btn-primary text-white">Back</a>
    </form>
</div>


